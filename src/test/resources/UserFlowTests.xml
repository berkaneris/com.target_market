        <parameter name ="browser" value ="firefox"/>
        <classes>
            <class name="tests.priorityBasedTests.UserFlowTest_01"/>
            <class name="tests.priorityBasedTests.UserFlowTest_02"/>
            <class name="tests.priorityBasedTests.UserFlowTest_03"/>
        </classes>
